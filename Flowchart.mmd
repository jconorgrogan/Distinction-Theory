    %% ───────── IC LADDER (EFR link + LOWNOV loop added) ─────────
    P0["P-0 Latent multiplicity<br/>(S₀ vs Ω distinction)"]
    P1["P-1 Writable / noisy slot"]
    P0 --> P1

    F0["F0 Registered Contrast"]
    P1 -- "Δ_gen" --> F0

    subgraph C0["C-0 Immediate consequences"]
        C0_1["Multiplicity realised"]
        C0_2["Trace persists"]
        C0_3["Asymmetric before → after"]
        C0_4["Non-invertible Δ ⇒ DAG"]
        C0_5["Proto-arrow:<br/>earlier ≺ later"]
        C0_6["Minimal memory<br/>(ancestor trace)"]
    end
    F0 --> C0_1
    F0 --> C0_2
    F0 --> C0_3
    C0_3 --> C0_4
    C0_4 --> C0_5
    C0_5 --> C0_6

    subgraph C1["C-1 Structural necessities"]
        L1["Identity & ¬Contradiction"]
        EFR["Explosion-Free Reference"]
        FA["Finite action per cycle"]
    end
    C0_1 --> L1
    C0_2 --> EFR
    C0_3 --> FA
    C0_6 -. "first stable ref" .-> EFR
    C0_4 -. "ordering ensures" .-> L1

    FRS["C-2 Finite Reachable Set<br/>(S-FiniteQ)"]
    C1 --> FRS
    EFR -. "Compact Reference (O1)" .-> FRS   %% explicit O1 justification
    FRS -- "Δ_id" --> FRS

    DYN{"C-3 Internal dynamics?"}
    FRS --> DYN
    TERMINAL["Static / Halt"]
    class TERMINAL dead
    DYNyes["Dynamic system"]
    DYN -- "No"  --> TERMINAL
    DYN -- "Yes" --> DYNyes

    REC["C-3a Recurrence<br/>(pigeon-hole)"]
    DYNyes --> REC

    NOVEL{"C-4 Sufficient novelty?"}
    REC --> NOVEL
    LOWNOV["Insufficient novelty<br/>(no saturation)"]
    SATRISK["L5 Saturation risk"]
    NOVEL -- "No"  --> LOWNOV
    NOVEL -- "Yes" --> SATRISK
    LOWNOV -. "continue processing" .-> DYNyes   %% loop back for low novelty

    COST["C-5 Non-zero op cost<br/>(S-Cost)"]
    SATRISK --> COST

    PERS{"C-6 Persistence objective?"}
    COST --> PERS
    YESPO["Persist"]
    PERS -- "No"  --> TERMINAL
    PERS -- "Yes" --> YESPO

    SUR["C-7 SUR<br/>(minimise L = K + λE)"]
    YESPO --> SUR

    FINAL["SUR-systems<br/>(cost-optimising, logical)"]
    class FINAL final
    SUR --> FINAL

